                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".PageOnceEnonce" />
        <activity android:name=".MainActivity" />
        <activity android:name=".PageChapitreList" />
        <activity
            android:name=".PageLogin"
            android:theme="@style/Theme.Mvvv.NoActionBarAndStatusBar" />
        <activity
            android:name=".PageCreateAccount"
            android:theme="@style/Theme.Mvvv.NoActionBarAndStatusBar" />
        <activity android:name=".PageExerciceList" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Mvvv.NoActionBarAndStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity android:name=".menu_app"></activity>
    </application>

</manifest>